Page {
  background-color: #f1f1f1;
}

.swiper-tab {
  background-color: #fff;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 33.33%;
  color: #797979;
}

.on {
  color: #5fdafe;
  border-bottom: 5rpx solid #30d1ff;
}

/* 下方 */

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

