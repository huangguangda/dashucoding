.content {
  font-size: 30rpx;
  padding-top: 30rpx;
  margin-left: 80rpx;
}

.date {
  font-size: 25rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-left: 80rpx;
  color: #cacaca;
}

.region {
  margin: 80rpx 50rpx 0rpx 50rpx;
